{
  "$id": "jira_jiraIssuesConnector",
  "$schema": "https://schema.yext.com/config/km/connector/v3",
  "displayName": "Jira Issues Connector",
  "entityType": "jira_Issue",
  "source": {
    "sourceConfig": {
      "nativeSourceConfig": {
        "source": "jira",
        "operation": "fetchIssues",
        "inputs":{
            "username": "${{username}}",
            "password": "${{password}}",
            "jql": "${{jql}}",
            "fields": "${{fields}}",
            "domainName" : "${{domainName}}"
        }
      }
    },
    "selectors": [
      {
        "type": "JSON",
        "header": "id",
        "path": "id"
      },
      {
        "type": "JSON",
        "header": "Key",
        "path": "key"
      },
      {
        "type": "JSON",
        "header": "Assignee Email",
        "path": "fields.assignee.emailAddress"
      },
      {
        "type": "JSON",
        "header": "Assignee Name",
        "path": "fields.assignee.displayName"
      },
      {
        "type": "JSON",
        "header": "Reporter Name",
        "path": "fields.reporter.displayName"
      },
      {
        "type": "JSON",
        "header": "Reporter Email",
        "path": "fields.reporter.emailAddress"
      },
      {
        "type": "JSON",
        "header": "Engineering Team",
        "path": "fields.customfield_11800[].value"
      },
      {
        "type": "JSON",
        "header": "Status",
        "path": "fields.status.statusCategory.name"
      },
      {
        "type": "JSON",
        "header": "Issue Summary",
        "path": "fields.summary"
      },
      {
        "type": "JSON",
        "header": "Labels",
        "path": "fields.labels"
      },
      {
        "type": "JSON",
        "header": "Commentor",
        "path": "fields.comment"
      },
      {
        "type": "JSON",
        "header": "Commentor Email",
        "path": "fields.comment"
      },
      {
        "type": "JSON",
        "header": "Comment",
        "path": "fields.comment"
      }
    ]
  },
  "transforms": [
    {
      "addColumn": {
        "newColumnHeader": "Jira Domain",
        "columnValue": "${{domainUrl}}"
      }
    },
    {
      "mergeColumns": {
        "inputHeaders": [
          "Jira Domain",
          "Key"
        ],
        "newColumnHeader": "Issue URL",
        "delimiter": ""
      }
    },
    {
      "function": {
        "inputHeaders": {
          "headers": [
            "Commentor"
          ]
        },
        "plugin": "jira_comment_formatter",
        "function": "extractCommentor"
      }
    },
    {
      "function": {
        "inputHeaders": {
          "headers": [
            "Commentor Email"
          ]
        },
        "plugin": "jira_comment_formatter",
        "function": "extractEmail"
      }
    },
    {
      "function": {
        "inputHeaders": {
          "headers": [
            "Comment"
          ]
        },
        "plugin": "jira_comment_formatter",
        "function": "extractComment"
      }
    }
  ],
  "mappings": [
    {
      "field": "jira_issueKey",
      "header": "Key",
      "subfieldPath": []
    },
    {
      "field": "jira_status",
      "header": "Status",
      "subfieldPath": []
    },
    {
      "field": "jira_engineeringTeam",
      "header": "Engineering Team",
      "subfieldPath": []
    },
    {
      "field": "jira_reporterEmail",
      "header": "Reporter Email",
      "subfieldPath": []
    },
    {
      "field": "jira_comments",
      "header": "Comment",
      "subfieldPath": [
        {
          "name": "comment"
        }
      ]
    },
    {
      "field": "jira_assigneeName",
      "header": "Assignee Name",
      "subfieldPath": []
    },
    {
      "field": "name",
      "header": "Issue Summary",
      "subfieldPath": []
    },
    {
      "field": "jira_comments",
      "header": "Commentor",
      "subfieldPath": [
        {
          "name": "commentor"
        }
      ]
    },
    {
      "field": "landingPageUrl",
      "header": "Issue URL",
      "subfieldPath": []
    },
    {
      "field": "entityId",
      "header": "id",
      "subfieldPath": []
    },
    {
      "field": "jira_reporterName",
      "header": "Reporter Name",
      "subfieldPath": []
    },
    {
      "field": "jira_assigneeEmail",
      "header": "Assignee Email",
      "subfieldPath": []
    },
    {
      "field": "jira_comments",
      "header": "Commentor Email",
      "subfieldPath": [
        {
          "name": "commentorEmail"
        }
      ]
    }
  ],
  "scheduleConfig": {
    "customSchedule": {
      "timeZone": "Pacific/Easter",
      "startDate": "2022-01-01",
      "startTime": "23:00",
      "frequencyType": "DAILY"
    },
    "runMode": "COMPREHENSIVE"
  }
}
